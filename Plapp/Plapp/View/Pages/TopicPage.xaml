<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns:local="clr-namespace:Plapp"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Plapp.TopicPage"
    Title="{Binding Title}"
    BackgroundColor="Teal">
    
    <ScrollView>
        <StackLayout 
            Margin="20"
            Orientation="Vertical">
            <StackLayout 
                Orientation="Vertical">
                <Image Source="{Binding ImageUri}"/>
                <Editor Text="{Binding Description}"
                        AutoSize="TextChanges">
                    <Editor.Behaviors>
                        <local:EditorCompletedBehaviour
                            Command="{Binding SaveTopicCommand}"
                            />
                    </Editor.Behaviors>
                </Editor>

            </StackLayout>

            <ListView
                VerticalOptions="Start"
                ItemsSource="{Binding DataEntries}"
                HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:DataSeriesCell/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>