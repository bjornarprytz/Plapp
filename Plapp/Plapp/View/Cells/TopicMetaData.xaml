<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plapp.TopicMetaData">
    <ContentView.Content>
        <Grid BackgroundColor="Beige">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenTopicCommand}" />
            </Grid.GestureRecognizers>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Aspect="AspectFit" HeightRequest="80">
                <Image.Source>
                    <FileImageSource File="{Binding ImageUri}" />
                </Image.Source>
            </Image>

            <StackLayout Grid.Column="1">
                <Label Text="{Binding Title}"/>
                <Label Text="{Binding Description}" LineBreakMode="TailTruncation"/>
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>