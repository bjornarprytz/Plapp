<?xml version="1.0" encoding="UTF-8"?>
<ViewCell 
    xmlns:local="clr-namespace:Plapp"
    xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plapp.NoteCell">
    <ViewCell.View>
        <StackLayout 
                    Orientation="Horizontal"
                    VerticalOptions="StartAndExpand">
            <Entry
                        HorizontalOptions="StartAndExpand"
                        Text="{Binding Title}"
                        FontSize="Large"/>
            <Label 
                        HorizontalOptions="End"
                        Text="{Binding Date, Converter={local:DateTimeToDateStringConverter}}" />
        
            <Entry
                  Margin="0, 0, 0, 10"
                  Text="{Binding Notes}"/>
        </StackLayout>
    </ViewCell.View>
</ViewCell>